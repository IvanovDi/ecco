.footer
  background #323D43
  color #fff
  padding 4rem 0
  position relative
  &Email
    float left
    position relative
    &__mail
      padding-left 7rem
      display inline-block
      font-size 2rem
      position absolute
      top 4.5rem
    &__image
      height 1.5rem
      width 3rem
      background #fff
      display inline-block
      position absolute
      left 1.5rem
      top 5.3rem
  &Call
    float left
    border-left 2px solid #fff
    border-right 2px solid #fff
    display inline-block
    padding 2rem 10rem
    position relative
    &__phone
      line-height 1.9rem
      font-size 2rem
    &__image
      display inline-block
      height 1.5rem
      width 3rem
      background #fff
      position absolute
      left 4.5rem
      top 5rem
  &Logo
    float left
    padding 0 3rem
    display inline-block
    &__logo
      padding-bottom 2rem
    &__description
      line-height .5rem
      font-size 1.4rem
